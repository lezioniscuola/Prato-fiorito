        int lunghezza=0;
        int larghezza=0;       
        int[][] matrice = new int [larghezza] [lunghezza];
        System.out.println("metti la larghezza");
        larghezza=in.nextInt();
        System.out.println("metti la lunghezza");
        lunghezza=in.nextInt();
    }
    
}
